<h1>Books</h1>

 <table>
 	<thead>
 		<tr>
 			<th>Title</th>
 			<th>Body</th>
 			<th></th>
 			<th></th>
 		</tr>
 	</thead>
 	<tbody>
 	  <% @posts.each do |post| %>
 		<tr>
	 		<td><%= post.title %></td>
	 		<td><%= post.body %></td>
	 		<td><%= link_to "show", post_path(post), class: "show_#{post.id}" %></td>
	 		<td><%= link_to "edit", edit_post_path(post), class: "edit_#{post.id}" %></td>
	 		<td><%= link_to "destroy", post_path(post), method: :delete, "data-confirm" =>"Are you sure",class: "destroy_#{post.id}" %></td>
 		</tr>
 	  <% end %>
 	</tbody>
 </table>
<h3>New book</h3>

<%= form_for(@post) do |f| %>

<h4>title</h4>
<%= f.text_field :title, class: "book_title" %>

<h4>body</h4>
<%= f.text_area :body, class: "book_body" %>

<%= f.submit 'Create book' %>

<% end %>





